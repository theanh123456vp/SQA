    <script>
        // Handle zoom product image
        let zoom = document.querySelector('.product__order-img');
        let imgZoom = document.getElementById('imgZoom');
        zoom.addEventListener('mousemove', (event) => {
            imgZoom.style.opacity = 1;

            let positionPx = event.x - zoom.getBoundingClientRect().left;
            let positonPercentX = (positionPx / zoom.offsetWidth) * 100;
            let positionPy = event.y - zoom.getBoundingClientRect().top;
            let positonPercentY = (positionPy / zoom.offsetHeight) * 100;

            imgZoom.style.setProperty('--zoom-x', positonPercentX + '%')
            imgZoom.style.setProperty('--zoom-y', positonPercentY + '%')
        })
        console.log('hello')


        zoom.addEventListener('mouseout', () => {
            imgZoom.style.opacity = 0;
        })



        
        // Order form modal
