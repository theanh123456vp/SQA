.hero__bg::after{
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgb(238 238 238  /80%);
}
.hero__swiper .swiper-pagination{
    bottom: 1rem;
    text-align: left;
    padding-left: 1rem;
    max-width: var(--container-max-width);
    left: 50%;
    transform: translateX(-50%);
    
}
.hero__swiper .swiper-pagination-bullet{
    width: 20px;
    height: 20px;
    border-radius: 0;
    margin: 0 !important;
