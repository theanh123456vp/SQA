{% extends 'base.html.twig' %}
{% block body %}
<!-- Product_List -->

    <div class="product__header">
        <h2>Our products</h2>
        <form action="/search" method="get">
  <input type="text" name="q" placeholder="Search...">
  <button type="submit">Search</button>
</form>
    </div>

    <div class="product__list-containter">
        <div class="product__row row">
            {% for product1 in product %}
            <div class=" col-12 col-sm-6 col-md-3 p-2 ">
                <div class="product__item product_page">
                    <div class="product__image">
                        <img src="{{product1.image}}"
                            alt="product image">
                        <div class="product_icon hidden ">
                            <i class='bx bx-heart'></i>
                            {% if app.user %}                           
                                    <i onclick="window.location.href='/order/product/{{product1.id}}';" class='bx bx-cart-add' ></i>
                                    {% endif %}
                        </div>
                    </div>
                    
                    <div class="product__info">
                        <h5 class="product__name">{{product1.name}}</h5>
                        <span class="product__price">${{product1.price}}</span>
                    </div>
                </div>
            </div>{% endfor %}
        </div>
    <!-- pagination -->
    <nav aria-label="Page navigation example">
  <ul class="pagination">
    <li class="page-item">
      <a class="page-link" href="#" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    <li class="page-item"><a class="page-link" href="#">1</a></li>
    <li class="page-item"><a class="page-link" href="#">2</a></li>
    <li class="page-item"><a class="page-link" href="#">3</a></li>
    <li class="page-item">
      <a class="page-link" href="#" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>


<!-- </Product_List >-->
{% endblock %}